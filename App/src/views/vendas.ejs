<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width">
  <title>replit</title>
  <link href="style.css" rel="stylesheet" type="text/css" />
  <style>
    body{
      font-family: Arial, Helvetica, sans-serif;
      background-image: linear-gradient(45deg, cyan, yellow);
    }
    section.contro{
      text-align: center;
    }
    section.ultimo{
      text-align: center;
    }

    section.banner div nav ul li{
      list-style: none;
      text-decoration-line: none;
    }
    section.banner div nav ul li a{
      text-decoration-line: none;
      color: white;
    }
    section.banner h1{
      color: red;
    }
    section.banner div{
      display: flex;
      right: 50%;
      background-color: rgba(0, 0, 0, 0.8);
      border-radius: 50px;
      width: 20%;
    }
    
    button{
      background-color: dodgerblue;
      border: none;
      padding: 15px;
      width: 60%;
      border-radius: 10px;
      color: white;
      font-size: 15px;
    }
    button:hover{
      background-color: deepskyblue;
      cursor: pointer;
    }

    form{
      text-align: center;
      list-style: none;
      background-color: rgba(0, 0, 0, 0.8);
      padding: 30px;
      border-radius: 15px;
      color: #fff;
      text-align: center;
      margin-left: 20px;
      max-width: 200px;
    }

    ul{
      display: flex;
    }
  </style>
</head>

<body>
  <section class="contro">
    <img src="<%- filme.filmeBanner %> " width="25%">
    <br><br>
    <div>
      <ul>
        <% sessoes.forEach(sessao => { %>
          <form action="/vendas?sessao=<%- sessao.sessaoId %>" method="POST">
            <p><%= sessao.sessaoDia %></p>
            <p><%= sessao.sessaoHorario %> </p>
            <button>Comprar ingresso</button>
          </form>
       <% }) %> 
      </ul>
    </div>
  </section>
      
  <script src="script.js"></script>
  
  <script src="https://replit.com/public/js/replit-badge.js" theme="blue" defer></script>
</body>

</html>
